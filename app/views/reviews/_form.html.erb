<%= simple_form_for [@restaurant, @review] do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- [...] all the fields -->
<div class="container">
  <%= f.input :content , label: 'Your content please', error: 'Content is mandatory, please specify one' %>
  <%= f.input :rating ,placeholder: 'X', input_html: { maxlength: 20 } %>
  <%= f.submit  :submit  %>
</div>

<% end %>
